page {
  background: white
}
.flo_l {
  float: left
}

.flo_r {
  float: right
}
.condition{
  flex-direction:row;
  width: 96%;
  height: 80rpx;
  background: #ffffff;
  margin: 0rpx 10rpx 0rpx 15rpx;
  border-radius: 30rpx;
  /* box-shadow: 0rpx -8rpx 34rpx rgb(12, 16, 218); */
}
.text_condition{
    flex-direction:row;
    width: 96%;
    height: 130px;
    background: #ffffffd7;
    margin: 0rpx 10rpx 0rpx 15rpx;
    border-radius: 30rpx;
    /* box-shadow: 0rpx -8rpx 34rpx rgb(12, 16, 218); */
  }
.bc_condition{
    width: 100%;
    min-height: 80vh;
    background: #ffffff;
    margin: auto;
    /* box-shadow: 0rpx -8rpx 34rpx rgb(183, 247, 199); */
    border-radius: 20rpx;
    position: absolute
} 
.condition .user{
  /* Rectangle */
  margin-left: 20rpx;
  width: 40px;
  height: 40px;
  border-radius: 10px;
}
.condition .search{
    flex: 1;
    color: rgb(103, 153, 160);
    margin-right:6px;
    height: 85rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    position:relative;
  }
.condition .alarm{
  flex: 1;
  color: rgb(103, 153, 160);
  margin-right:6px;

  height: 85rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  position:relative;
}
.condition .square2{
  margin: auto;
  width: 40px;
  height:40px;
  margin-right: 10px;
  background: rgb(214, 241, 241);
  border-radius: 10px;
  position:relative;

}
.condition .square1{
  margin: auto;
  width: 80rpx;
  height:80rpx;
  margin-right: 20rpx;
  background: rgb(214, 241, 241);
  border-radius: 10px;
  position:relative;
}
.txt{
    display: flex;
    flex-flow:column; 
    flex-wrap: wrap-reverse;
}
.txt .date{
    position:relative;
    white-space: nowrap;
    line-height: 24px;
    color: rgb(176, 179, 199);
    margin-top:22px ;
    margin-left:-70rpx ;
}
.txt .hello{
    white-space: nowrap;
    line-height: 24px;
    color: rgb(38, 44, 61);
    font-size: 28px;
    font-weight: 400;
    line-height: 41px;
    margin-top:0px ;
    margin-left:-70rpx ;
}
.txt .notify{
    white-space: nowrap;
    position: relative;
    height: 27px;
    color: rgb(38, 44, 61);
    font-size: 18px;
    font-weight: 400;
    line-height: 27px;
    letter-spacing: 0px;
    margin-top:10px ;
    margin-left:-70rpx ;
}
.notify1{
    white-space: nowrap;
    position: relative;
    height: 27px;
    color: rgb(38, 44, 61);
    font-size: 18px;
    font-weight: 400;
    line-height: 27px;
    letter-spacing: 0px;
    margin-top:-1px ;
    margin-left:28rpx ;
}
.bc_title{
    width: 281px;
    height:136px;
    min-height: 180rpx;
    background: rgb(255, 255, 255);
    margin: -12rpx auto;
    border-radius: 20rpx
}
.bc_icon{
    width: 120px;
    background-color: rgb(255, 255, 255);
    height: 136px;
