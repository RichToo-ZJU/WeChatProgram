/**index.wxss**/

.page_bg{
  background-color: white;
  height: 100%;
}

.title{
  font-size: 40rpx;
  font-weight: normal;
  text-align: center;
  color: #ffffff;
  background-color: #0eafaf;
  margin-top: 100rpx;
}

.title_box{
  flex-direction:row;
  width: 100%;
  height: 350rpx;
  background: #0eafaf ;
  border-radius: 50rpx;
  /* margin-top:-50rpx; */
}

.float_left{
  float:left;
}

.user_info_bg{
  overflow:hidden;
  /* width: 98%; */
  height: 160rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:0  30rpx ;
  box-shadow: 0rpx 8rpx 40rpx rgb(111, 133, 120); 
  background: #ffffffd7;
  margin: -90rpx 30rpx 80rpx 30rpx; 
  border-radius: 18rpx;
}
.image_number{
  display: flex
}
.right_button{
  width: 64rpx;
  height: 64rpx;
  background: rgb(214, 248, 239);
  border-radius: 20rpx;
  margin-right: 0rpx;
}
.right_button::after{
  border: none; 
}
.user_img{
  text-align: left;
  height: 120rpx;
  width: 120rpx;
  margin-top: 18rpx;
  margin-left: 10rpx;
  margin-bottom: 5rpx;
  border-radius: 20rpx;
}

.txt{
  margin-left: 30rpx;
  display: flex;
  flex-flow:column; 
  flex-wrap: wrap;
}

.user_name{
  white-space: nowrap;
  line-height: 20rpx;
  color: rgb(46, 52, 75);
  font-size: 40rpx;
  font-weight: 600;
  line-height: 82rpx;
  margin-left:20rpx ;
  margin-top: 35rpx;
}

.user_number{
  position:relative;
  white-space: nowrap;
  line-height: 20rpx;
  color: rgb(176, 179, 199);
  margin-top:10rpx ;
  margin-left:20rpx ;
  font-size:30rpx;
}

.content_bg{
  box-shadow: 0rpx 8rpx 40rpx rgb(111, 133, 120); 
  width: 92%;
  height: 600rpx;
  border-radius: 18rpx;
  margin-left: 26rpx;
}
.hover_list{
  opacity: 0.9;
  background: #f7f7f7;

}
.bt_login{
  width: 100%;
  height: 100%;
  border-radius: 40rpx;
  font-size: 35rpx;
  margin: 10rpx 10rpx;
  background-color: rgb(255, 255, 255);
  justify-content: center;
  align-items: center;
}
@import "/pages/tabbar/tabbar.wxss";
