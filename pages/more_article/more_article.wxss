page {
  background: white
}
.flo_l {
  float: left
}

.flo_r {
  float: right
}
.condition{
  flex-direction:row;
  width: 96%;
  height: 80rpx;
  background: #ffffff;
  margin: 0rpx 10rpx 0rpx 15rpx;
  border-radius: 30rpx;
  /* box-shadow: 0rpx -8rpx 34rpx rgb(12, 16, 218); */
}
.text_condition{
  padding:24px;  
}
.bc_condition{
    width: 100%;
    min-height: 80vh;
    background: #ffffff;
    margin: auto;
    /* box-shadow: 0rpx -8rpx 34rpx rgb(183, 247, 199); */
    border-radius: 20rpx;
    position: absolute;

} 
.condition .user{
  /* Rectangle */
  margin-left: 20rpx;
  width: 40px;
  height: 40px;
  border-radius: 10px;
}
.condition .search{
    flex: 1;
    color: rgb(103, 153, 160);
    margin-right:6px;
    height: 85rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    position:relative;
  }
.condition .alarm{
  flex: 1;
  color: rgb(103, 153, 160);
  margin-right:6px;

  height: 85rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  position:relative;
}
.condition .square2{
  margin: auto;
  width: 40px;
  height:40px;
  margin-right: 10px;
  background: rgb(214, 241, 241);
  border-radius: 10px;
  position:relative;

}
.condition .square1{
  margin: auto;
  width: 80rpx;
  height:80rpx;
  margin-right: 20rpx;
  background: rgb(214, 241, 241);
  border-radius: 10px;
  position:relative;
}
.txt{
    display: flex;
    background-color: #ffffff;
    flex-flow:column; 
    flex-wrap: wrap-reverse;
}
.txt .date{
    position:relative;
    white-space: nowrap;
    line-height: 24px;
    color: rgb(176, 179, 199);
}
.txt .hello{
    white-space: nowrap;
    line-height: 24px;
    color: rgb(38, 44, 61);
    font-size: 28px;
    font-weight: 400;
    line-height: 41px;
    margin-top:0px ;
}
.txt .notify{
    white-space: nowrap;
    position: relative;
    height: 27px;
    color: rgb(38, 44, 61);
    font-size: 18px;
    font-weight: 400;
    line-height: 27px;
    letter-spacing: 0px;
    margin-top:10px ;
}
.notify1{
    color:blue;
    white-space: nowrap;
    position: relative;
    height: 27px;
    color: rgb(255, 255, 255);
    justify-content: space-between;
    display: flex;
    
  }
.bc_title{
    width: 281px;
    height:136px;
    min-height: 180rpx;
    background: rgb(255, 255, 255);
    margin:  auto;
    border-radius: 20rpx;
    display: flex;
    justify-content: space-between;
    
}
.bc_icon{
    width: 120px;
    height: 136px;
    background-color: rgb(255, 255, 255);
    margin-top: -5px;
    box-shadow: 5px 6px 18px rgba(0, 0, 0, 0.08);
    border-radius: 16px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.text_icon{
    /* General Check-up */
    position: relative;
    color: rgb(38, 44, 61);
    font-family: OPPOSans;
    font-size: 18px;
    font-weight: 400;
    line-height: 21px;
    letter-spacing: 0px;
    text-align: center;
}
.bc_recommend {
    width: 100%;
    min-height: 600px;
    background: rgb(255, 255, 255);
    margin: auto;
    margin-top: 70px;
    box-shadow: 5px 6px 18px rgba(0, 0, 0, 0.08);
    border-radius: 15px;
    padding: auto;
    padding-top: 6px;
  }

  .font_26 {
    font-size: 26rpx
  }
.size_pictures image{
  width: 60px;
  height:60px;
  align-items:center;
}
.text_kepu{
  color: rgb(38, 44, 61);
  font-family: OPPOSans;
  font-size: 18px;
  font-weight: 400;
  line-height: 27px;
  letter-spacing: 0px;
  text-align: left;
  margin-left: 20px;
}
.article_all{
  width: 95%;
  min-height: 180px;
  background: rgb(255, 255, 255);
  margin: auto;
  /* box-shadow: 5px 6px 18px rgba(0, 0, 0, 0.08); */
  display: flex;
  padding-bottom: 25px;
  flex-direction: column;
  justify-content: space-between;
  border-radius: 16px;

}
.arrow{
  margin-top: auto;
  margin-right: 15px;
}
.single_artile{
  width: 95%;
  height: 108px;
  background: rgb(255, 255, 255);
  margin: auto;
  margin-top: 5px;
  box-shadow: 5px 6px 18px rgba(0, 0, 0, 0.08);
  border-radius: 16px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.article_summarize{
  display: flex;
  flex-direction: column;
  background-color: rgb(255, 255, 255);
  justify-content: center;
  height: 100px;
  border-radius: 16px;

}
.article_summarize1{
  color: rgb(38, 44, 61);
  font-size: 16px;
  font-weight: 400;
  line-height: 24px;
  letter-spacing: 0px;
  text-align: left;
}
.article_summarize2{
  color: rgb(116, 127, 158);
  font-family: OPPOSans;
  font-size: 14px;
  font-weight: 400;
  line-height: 21px;
  letter-spacing: 0px;
  text-align:left;
}
.article_picture image{
  width: 90px;
  height: 90px;
  border-radius: 20px;
  box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.08);
  border-radius: 16px;
}
.news{
  background: rgb(220, 245, 249);
  border-radius: 6px;
  width: 55px;
  height: 20px;
  align-self: flex-end;
  margin-right: 29px;
  margin-top:10px ;
  display: flex;
  justify-content: center;
}
.news_word{
  margin-top: -3px;
}






