<scroll-view>
  <van-checkbox-group
    class="card-goods"
    value="{{ checkedGoods }}"
    bind:change="onChange"
  >
    <van-checkbox
      class="card-goods__item"
      wx:for="{{ goods }}"
      wx:key="{{ item.id }}"
      name="{{ item.id }}"
    >
      <van-card
        title="{{ item.title }}"
        desc="{{ item.desc }}"
        num="{{ item.num }}"
        price="{{ item.formatPrice }}"
        thumb="{{ item.thumb }}"
      />
    </van-checkbox>
  </van-checkbox-group>
